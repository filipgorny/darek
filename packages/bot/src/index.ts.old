import nlp from "compromise";

const pattern =
  "(please|#Honorific|can you)? #PresentTense (a|the)? #Adjective? #Noun (#Honorific|please)?";

const texts = [
  "Add a new todo please",
  "Please add new todo",
  "Can you add a new todo please?",
  "This should not match",
];

for (const text of texts) {
  let doc = nlp(text);

  let str = doc.match(pattern).text();

  if (str) {
    console.log(`[MATCH] ${str}`);

    console.log("The item is: " + doc.remove("you").match("#Noun").text());
  } else {
    console.log(`[NO MATCH] ${text}`);
  }
}

